<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>İT-ni bizimlə öyrən</title>

    <link href="~/Content/css/bootstrap.css" rel="stylesheet">

</head>
<body>
    <div class="container">
        <h2>Daxil ol</h2>
        <form method="post" action="/Home/Signin">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" class="form-control" name="EMAIL" placeholder="Email-i daxil edin">
            </div>
            <div class="form-group">
                <label for="pwd">Password:</label>
                <input type="password" class="form-control" name="PASSWORD" placeholder="Şifrəni daxil edin">



                <button type="submit" class="btn btn-default">Daxil ol</button>
            </div>
        </form>

        <script>


        </script>

    </div>
    @if (ViewBag.message != null)
    {
        <script type="text/javascript">
        window.onload = function() {
            alert("@ViewBag.message");
    };

        </script>
    }


</body>
</html>